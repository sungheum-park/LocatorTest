<?xml version="1.0" encoding="UTF-8"?>

<!-- 30초마다 설정 파일의 변경을 확인한다. 파일이 변경되면 다시 로딩한다 -->
<configuration scan="true" scanPeriod="30 seconds">

	<property name="LOGS_PATH" value="/logs" />
	<!--local-->
	<!-- ================================== Console Appender ================================== -->
	<appender name="CONSOLE" class="ch.qos.logback.core.ConsoleAppender">
		<encoder>
			<pattern>%d [%thread] %-5level %-20.50logger{35} - %msg%n</pattern>
			<immediateFlush>false</immediateFlush>
			<outputPatternAsHeader>true</outputPatternAsHeader>
		</encoder>
	</appender>
	
	<appender name="ROLLING" class="ch.qos.logback.core.rolling.RollingFileAppender">
		<!-- 파일경로 설정 -->
		<file>${LOGS_PATH}/logback.log</file>
	
		<!-- Rolling 정책 -->	
		<rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
			<!-- 일자별 로그파일 최대 보관주기(일) -->
			<maxHistory>60</maxHistory>
			<!-- 파일 쓰기가 종료된 log 파일명의 패턴을 지정, (.gz,.zip 등을 넣으면 자동 일자별 로그파일 압축) -->
			<fileNamePattern>${LOGS_PATH}/logback.%d{yyyy-MM-dd}.%i.log.gz</fileNamePattern>
			<timeBasedFileNamingAndTriggeringPolicy class="ch.qos.logback.core.rolling.SizeAndTimeBasedFNATP">
				<!-- 파일당 최고 용량 -->
				<maxFileSize>100MB</maxFileSize>
			</timeBasedFileNamingAndTriggeringPolicy>
		</rollingPolicy>
		
		<!-- 출력패턴 설정-->
		<encoder>
			<pattern>[%d{yyyy-MM-dd HH:mm:ss}:%-3relative][%thread] %-5level %logger{35} - %msg%n</pattern>
			<charset>UTF-8</charset>
		</encoder> 
	</appender>

	<!-- ================================== Logger Define ================================== -->
	<!-- 프로젝트 -->
	<logger name="kr.co.msync" level="DEBUG" additivity="true"/>

	<!-- springframework -->
	<logger name="org.springframework" level="INFO" additivity="true"/>

	<!-- apache -->
	<logger name="org.apache" level="OFF" additivity="false"/>

	<!-- mybatis -->
	<logger name="org.mybatis" level="DEBUG" additivity="true"/>

	<!-- log4jdbc -->
	<!-- SQL 줄바꿈 하려면 톰캣 [Open launch configuration]에 -Dlog4jdbc.dump.sql.maxlinelength=0 옵션 설정 -->
	<logger name="jdbc.sqltiming" level="DEBUG" additivity="true"/>
	<logger name="jdbc.resultsettable" level="INFO" additivity="true"/>
	<logger name="jdbc.sqlonly" level="OFF" additivity="false"/>
	<logger name="jdbc.audit" level="OFF" additivity="false"/>
	<logger name="jdbc.resultset" level="OFF" additivity="false"/>
	<logger name="jdbc.connection" level="OFF" additivity="false"/>
	<logger name="log4jdbc.debug" level="OFF" additivity="false"/>

	<!-- root -->
	<root level="DEBUG">
		<appender-ref ref="CONSOLE"/>
	</root>

</configuration>